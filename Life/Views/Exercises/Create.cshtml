@model Life.Application.Services.Exercise.DTO.ExerciseDTO

@using Life.Application.Services.Exercise.DTO;
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Exercise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="create-exercise" asp-action="Create" autocomplete="off">
            @await Component.InvokeAsync("ExerciseInfoSearchBar", new { exerciseInfo = Model })
            <div class="set-list">
                @*@Html.EditorForMany(exercise => exercise.Sets, set => set.Index);*@
            </div>
            <button class="add-set">Add Set</button>
            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/jqueryui/jquery-ui.css" rel="stylesheet" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/exercise/setdynamicgenerator.js" on-content-loaded="true"></script>
}
