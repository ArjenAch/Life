@using Life.Application.Services.Exercise.DTO
@using Life.Core.Domain.Exercise

@model ExerciseInfoDTO
@*
    Layout = null;
*@

<div>
    <form autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Exercise:</label>
            <input id="info-title" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div id="exercise-info">
            <div class="form-group">
                <label asp-for="ExerciseType" class="control-label"></label>
                <select id="exercise-type" asp-for="ExerciseType" asp-items="Html.GetEnumSelectList<ExerciseType>()" class="form-control"></select>
                <span asp-validation-for="ExerciseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input id="description" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js" on-content-loaded="true"></script>
    <script src="~/js/exercise/viewcomponents/exerciseinfosearchbar.js" on-content-loaded="true"></script>
</environment>

